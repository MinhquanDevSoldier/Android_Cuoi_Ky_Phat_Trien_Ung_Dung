<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".layout_activity.activity_manage_table">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Spinner
            android:id="@+id/spinnerKhuVucQL"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btnLocKhuVuc"
            android:text="Lọc"
            android:textSize="18sp"
            android:background="@drawable/btnthemmanagefood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <EditText
            android:shadowColor="@color/black"
            android:id="@+id/edtTimBan"
            android:hint="Nhập tên bàn muốn tìm"
            android:layout_weight="3.5"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnTimKiemBan"
            android:text="Tìm"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btntimkiem"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:text="Danh sách Bàn"
        android:textSize="25sp"
        android:background="#0099ff"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <TextView
            android:text="ID Bàn"
            android:id="@+id/textview_idtable"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:background="@drawable/backdround_monan_1"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="15dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Tên bàn"
            android:id="@+id/textview_nametable"
            android:layout_weight="7"
            android:background="@drawable/backdround_monan_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lvDanhSachBan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>