<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_dialog_add_managefood"
    android:paddingTop="30dp"
    android:layout_height="490dp"
    android:orientation="vertical">
    <TextView
        android:text="Thêm món"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_dang_nhap"
        android:id="@+id/spinneraddmanagefood"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/edttenmanagefood"
                android:layout_marginTop="20dp"
                android:hint="Nhập tên món"
                android:background="@drawable/edit_custom"
                android:textSize="25sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/edtgiamanagefood"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:hint="Nhập giá"
                android:textSize="25sp"
                android:padding="15dp"
                android:background="@drawable/edit_custom"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <LinearLayout
                android:layout_marginTop="80dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnhuymanagefood"
                    android:layout_weight="1"
                    android:text="Hủy"
                    android:background="@drawable/btnhuymanagefood"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnthemmanagefood"
                    android:text="Thêm"
                    android:background="@drawable/btnthemmanagefood"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>