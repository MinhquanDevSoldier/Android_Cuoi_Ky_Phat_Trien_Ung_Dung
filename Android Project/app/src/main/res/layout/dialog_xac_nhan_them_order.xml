<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/background_custom_2"
    android:layout_height="match_parent">
    <TextView
        android:textAlignment="center"
        android:gravity="center"
        android:text="Món A"
        android:textSize="40sp"
        android:paddingBottom="100dp"
        android:id="@+id/tvProduceOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
       android:gravity="center"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnsubnumber"
            android:layout_weight="1"
            android:text="sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edtNumber"
            android:text="0"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnaddnumber"
            android:text="add"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnAcceptOrder"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:text="Thêm vào bàn"
        android:background="@drawable/btnthemmanagefood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnUnAcceptOrder"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:text="Hủy"
        android:background="@drawable/btnhuymanagefood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>