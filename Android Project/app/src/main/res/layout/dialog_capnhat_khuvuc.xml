<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_add_managefood"
    android:layout_height="520dp">
    <TextView
        android:text="Cập nhật khu vực"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/background_custom_1"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="Tên khu vực : "
            android:textSize="28sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/textview_tenkv_capnhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_scrollview_custom_1"
            android:hint="Nhập tên khu vực"
            android:padding="20dp"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btnCapNhatKV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnthemmanagefood"
            android:padding="15dp"
            android:text="Cập nhật"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnHuyCapNhatKV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnhuymanagefood"
            android:padding="15dp"
            android:text="Hủy"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>