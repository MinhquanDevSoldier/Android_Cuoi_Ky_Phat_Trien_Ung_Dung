<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_add_managefood"
    android:layout_height="520dp">
    <TextView
        android:text="Thêm khu vực"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/background_custom_1"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="19dp"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="50dp"
            android:text="Tên khu vực : "
            android:textStyle="bold|italic"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/textview_TenKV_Them"
            android:background="@drawable/background_scrollview_custom_1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
           android:hint="Nhập tên khu vực"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnThemKV"
            android:background="@drawable/btnthemmanagefood"
            android:text="Thêm"
            android:textSize="26sp"
            android:padding="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnHuyThemKV"
            android:background="@drawable/btnhuymanagefood"
            android:text="Hủy"
            android:textSize="26sp"
            android:padding="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>