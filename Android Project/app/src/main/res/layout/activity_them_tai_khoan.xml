<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout_activity.activity_them_tai_khoan">
    <TextView
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="#fff"
        android:background="#00BCD4"
        android:text="Thêm tài khoản"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tên tài khoản :"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <EditText
                android:hint="Nhập tên tài khoản"
                android:id="@+id/edtTenTk_Them"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edt_dang_nhap"
                android:padding="10dp"
                android:textSize="28sp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mật khẩu :"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <EditText
                android:hint="Mật khẩu"
                android:id="@+id/edtMatKhau_Them"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edt_dang_nhap"
                android:padding="10dp"
                android:textSize="28sp" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="29sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Chức vụ :"
                    android:textStyle="bold|italic"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"/>
                <Spinner
                    android:id="@+id/spinner_ChucVu_them"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tên nhân viên :"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <EditText
                android:hint="Nhập tên nhân viên"
                android:id="@+id/edtTenNhanVien"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edt_dang_nhap"
                android:padding="10dp"
                android:textSize="28sp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ngày sinh :"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <EditText
                android:hint="DD/MM/YYYY"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edt_dang_nhap"
                android:padding="10dp"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="CMND :"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <EditText
                android:hint="Nhập CMND"
                android:id="@+id/edtCMND"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edt_dang_nhap"
                android:padding="10dp"
                android:textSize="28sp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mức lương / giờ :"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <EditText
                android:hint="Nhập mức lương"
                android:id="@+id/edtMucLuong_Them"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edt_dang_nhap"
                android:padding="10dp"
                android:textSize="28sp" />
            <Button
                android:id="@+id/btnThemTaiKhoan"
                android:background="@drawable/btnthemmanagefood"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="Thêm tài khoản"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnHuyThemTaiKhoan"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnhuymanagefood"
                android:text="Hủy"
                android:padding="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>