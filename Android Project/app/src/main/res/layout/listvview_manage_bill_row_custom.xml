<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_scrollview_custom_1"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1.8"
            android:text="Mã"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="4.7"
            android:text="Tên bàn"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="3.5"
            android:text="Đã thu"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvIdHoaDon"
            android:layout_weight="1.8"
            android:text="idhd"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvTenBanTheoHoaDon"
            android:layout_weight="4.7"
            android:text="tenban"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvTongTienHoaDon"
            android:layout_weight="3.5"
            android:text="tongtien"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:text="Time In"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvDateTimeIn"
            android:layout_weight="7"
            android:text="tenban"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:text="Time Out"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvDateTimeOut"
            android:layout_weight="7"
            android:text="tenban"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>